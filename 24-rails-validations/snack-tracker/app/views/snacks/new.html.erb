<h1>Create a New Snack</h1>

<%= form_for @snack do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :calories %>
    <%= f.number_field :calories, step: 50 %>
    <%= f.label :deliciousness %>
    <%= f.select :deliciousness, (1..10) %>
    <%= f.label :retailer %>
    <%= f.collection_select :retailer_id, @retailer_collection, :id, :name_and_year %>
    <%= f.submit %>

<% end %>